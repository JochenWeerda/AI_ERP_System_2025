<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_valeo_dashboard_widget_chart_form" model="ir.ui.view">
            <field name="name">valeo.dashboard.widget.chart.form</field>
            <field name="model">valeo.dashboard.widget.chart</field>
            <field name="arch" type="xml">
                <form string="Chart Widget">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="dashboard_id"/>
                        </group>
                        <group string="Position und Größe">
                            <field name="position_x"/>
                            <field name="position_y"/>
                            <field name="width"/>
                            <field name="height"/>
                        </group>
                        <group string="Diagramm-Konfiguration">
                            <field name="chart_type"/>
                            <field name="data_source"/>
                            <field name="show_legend"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo> 