<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_valeo_dashboard_widget_kpi_form" model="ir.ui.view">
            <field name="name">valeo.dashboard.widget.kpi.form</field>
            <field name="model">valeo.dashboard.widget.kpi</field>
            <field name="arch" type="xml">
                <form string="KPI Widget">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="dashboard_id"/>
                        </group>
                        <group string="Position und Größe">
                            <field name="position_x"/>
                            <field name="position_y"/>
                            <field name="width"/>
                            <field name="height"/>
                        </group>
                        <group string="KPI-Konfiguration">
                            <field name="kpi_value"/>
                            <field name="kpi_target"/>
                            <field name="kpi_format"/>
                            <field name="color"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo> 