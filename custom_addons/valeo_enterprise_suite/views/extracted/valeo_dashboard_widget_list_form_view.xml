<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_valeo_dashboard_widget_list_form" model="ir.ui.view">
            <field name="name">valeo.dashboard.widget.list.form</field>
            <field name="model">valeo.dashboard.widget.list</field>
            <field name="arch" type="xml">
                <form string="List Widget">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="dashboard_id"/>
                        </group>
                        <group string="Position und Größe">
                            <field name="position_x"/>
                            <field name="position_y"/>
                            <field name="width"/>
                            <field name="height"/>
                        </group>
                        <group string="Listen-Konfiguration">
                            <field name="model_id"/>
                            <field name="domain"/>
                            <field name="limit"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo> 